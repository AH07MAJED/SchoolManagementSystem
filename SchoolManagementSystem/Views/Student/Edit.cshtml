@model SchoolManagementSystem.Models.Student

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row gx-3">
    <div class="col"></div>
    <div class="col-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">@ViewBag.Title</h5>
                </div>
                <div class="card-body">


                 

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <!-- Display StudentName from session -->
                    <div class="mb-3">
                        <label class="form-label">Session: Student Name</label>
                        <p>@ViewBag.StudentNameFromSession</p>
                    </div>

                    <!-- Student Name -->
                    <div class="mb-3">
                        @Html.LabelFor(model => model.StudentName, new { @class = "form-label" })
                        @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <!-- Age -->
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Age, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter age as text" } })
                    </div>

                    <!-- Standard -->
                    <div class="mb-3">
                        @Html.LabelFor(model => model.standard, new { @class = "form-label" })
                        @Html.EditorFor(model => model.standard, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter standard (e.g., 10th, 12th)" } })
                    </div>

                    <!-- Contact -->
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Contact, new { @class = "form-label" })
                        @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter contact number" } })
                    </div>

                    <!-- IsActive (Switch) -->
                    <div class="form-check form-switch mb-3">
                        @Html.LabelFor(model => model.IsActive, "Active Status", new { @class = "form-check-label" })
                        @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-check-input" })
                    </div>
                </div>

                <div class="card-footer">
                    <div class="d-flex gap-2 justify-content-end">
                        <a class="btn btn-outline-danger" href="@Url.Action("Index")">Cancel</a>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col"></div>
</div>
