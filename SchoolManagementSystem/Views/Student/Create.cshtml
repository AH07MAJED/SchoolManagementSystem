@model SchoolManagementSystem.Models.Student

@{
    ViewBag.Title = "Create Student";
    // ViewBag se total students ka value fetch kar rahe hain
    var totalStudents = ViewBag.TotalStudents;
}

<div class="row gx-3">
    <div class="col"></div>
    <div class="col-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title">@ViewBag.Title</h5>
                    <!-- Session se total students ka count show karna -->
                    <p>Total Students: @totalStudents</p>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <!-- Form Fields Start -->
                    <div class="row gx-3">
                        <!-- IsActive Field (Switch) -->
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "form-label" })
                                <div class="form-check form-switch">
                                    @Html.CheckBoxFor(model => model.IsActive, new { id = "IsActiveSwitch", @class = "form-check-input", @role = "switch", @checked = "checked" })
                                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "form-check-label", @for = "IsActiveSwitch" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- StudentName Field -->
                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.StudentName, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <!-- Age Field -->
                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <!-- Standard Field -->
                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.standard, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.standard, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <!-- Contact Field -->
                    <div class="row gx-3">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="mb-3">
                                @Html.LabelFor(model => model.Contact, htmlAttributes: new { @class = "form-label" })
                                @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2 justify-content-end">
                        <a class="btn btn-outline-danger" href="@Url.Action("Index")" onclick="return confirm('Do you want to leave this page?')">
                            <i class="bi bi-x-square"></i>
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-success">
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col"></div>
</div>
